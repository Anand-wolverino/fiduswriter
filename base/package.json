// Fidus Writer will combine this file with package.json files in other installed
// apps before executing npm commands. Different from a regular package.json, comments
// are allowed in this file.

{
  "name": "fidus-writer",
  "description": "Install dependencies for ES6 transpilation",
  "scripts": {
    "get_mml2omml": "mkdir -p ./static-libs/xsl/ && wget https://raw.githubusercontent.com/AbiWord/abiword/14cbf144cb10a5a5ea6ee11275f7178ca4ff055a/plugins/openxml/omml_xslt/mml2omml.xsl -O ./static-libs/xsl/mml2omml.xsl",
    "copy_jquery": "mkdir -p ./static-libs/js/libs/ && cp node_modules/jquery/dist/jquery.min.js ./static-libs/js/libs/",
    "copy_jquery-ui": "mkdir -p ./static-libs/js/libs/ && cp node_modules/jquery-ui-dist/jquery-ui.min.js ./static-libs/js/libs/",
    "copy_datatables": "mkdir -p ./static-libs/js/libs/ && cp node_modules/datatables/media/js/jquery.dataTables.min.js ./static-libs/js/libs/",
    "copy_fontawesome": "mkdir -p ./static-libs/css/ && mkdir -p ./static-libs/fonts/ && cp node_modules/font-awesome/css/* ./static-libs/css/ && cp node_modules/font-awesome/fonts/* ./static-libs/fonts/",
    "copy_prosemirror_css": "mkdir -p ./static-libs/css/ && cp node_modules/prosemirror-view/style/prosemirror.css ./static-libs/css/",
    "copy_mathquill_css": "mkdir -p ./static-libs/css/ && cp node_modules/mathquill/build/mathquill.css ./static-libs/css/",
    "copy_mathquill_font": "mkdir -p ./static-libs/css/font/ && cp node_modules/mathquill/build/font/* ./static-libs/css/font/",
    "postinstall": "npm run get_mml2omml && npm run copy_jquery && npm run copy_jquery-ui && npm run copy_fontawesome && npm run copy_datatables && npm run copy_prosemirror_css && npm run copy_mathquill_css && npm run copy_mathquill_font",
    "jshint": "jshint ."
  },
  "author": "Johannes Wilm",
  "license": "AGPL",
  "private": true,
  "dependencies": {
    "biblatex-csl-converter": "1.3.28",
    "bowser": "1.9.2",
    "browserkeymap": "2.0.2",
    "citeproc": "2.1.190",
    "datatables": "1.10.13",
    "diff-dom": "2.3.1",
    "downloadjs": "1.4.7",
    "fastdom": "1.0.6",
    "fast-json-patch": "2.0.6",
    "font-awesome": "4.7.0",
    "jquery": "3.3.1",
    "jquery-ui-dist": "1.12.1",
    "jshint": "2.9.5",
    "jszip": "3.1.5",
    "jszip-utils": "0.0.2",
    "katex": "0.9.0",
    "mathquill": "0.10.1-b",
    "orderedmap": "1.0.0",
    "paginate-for-print": "0.0.7",
    "prosemirror-gapcursor": "1.0.1",
    "prosemirror-state": "1.1.0",
    "prosemirror-transform": "1.0.4",
    "prosemirror-view": "1.0.11",
    "prosemirror-model": "1.1.0",
    "prosemirror-keymap": "1.0.1",
    "prosemirror-schema-basic": "1.0.0",
    "prosemirror-history": "1.0.0",
    "prosemirror-schema-list": "1.0.0",
    "prosemirror-commands": "1.0.5",
    "prosemirror-tables": "0.6.2",
    "prosemirror-collab": "1.0.0",
    "prosemirror-example-setup": "1.0.1",
    "prosemirror-dropcursor": "1.0.0",
    "texzilla": "0.9.9",
    "tokenfield": "0.9.1",
    "w3c-keyname": "1.1.8",
    "fix-utf8": "1.0.4",
    "fast-deep-equal": "1.0.0"
  },
  "jshintConfig": {
    "esversion": 6,
    "loopfunc": true,
    "asi": true,
    "multistr": true,
    "sub": true,
    "undef": true,
    "globals": {
      "jQuery": true,
      "MathQuill": true,
      "gettext": false,
      "$StaticUrls": false,
      "console": false,
      "FormData": false,
      "URLSearchParams": false,
      "self": true
    },
    "browser": true,
    "jquery": true,
    "worker": true,
    "varstmt": true
  }
}
